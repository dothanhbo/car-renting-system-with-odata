@page
@model NotAuthorizedModel
@{
    ViewData["Title"] = "Not Authorized";
    Layout = null;
}
<style>
    /* CSS styles for the "Not Authorized" page */
    .not-authorized-container {
        text-align: center;
        margin-top: 50px;
    }

    .not-authorized-title {
        font-size: 2rem;
        color: #333;
    }

    .not-authorized-message {
        font-size: 1.2rem;
        margin-top: 10px;
    }

    .back-to-login-button {
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1.2rem;
        margin-top: 20px;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

        .back-to-login-button:hover {
            background-color: #0056b3;
        }
</style>

<div class="not-authorized-container">
    <h1 class="not-authorized-title">Not Authorized</h1>
    <p class="not-authorized-message">You do not have permission to access this page.</p>
    <a class="btn btn-primary back-to-login-button" href="/Index">Back to Login</a>
</div>