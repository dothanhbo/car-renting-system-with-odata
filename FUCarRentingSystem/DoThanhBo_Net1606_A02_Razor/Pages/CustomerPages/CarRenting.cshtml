@page
@model DoThanhBo_Net1606_A02_Razor.Pages.CustomerPages.CarRentingModel

@{
    ViewData["Title"] = "CarRenting";
    Layout = "_UserLayout";
}

<h1>CarRenting</h1>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarRental.Car.CarName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarRental.Car.CarName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarRental.Car.CarModelYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarRental.Car.CarModelYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarRental.Car.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarRental.Car.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarRental.Car.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarRental.Car.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarRental.Car.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarRental.Car.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarRental.Car.ImportDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarRental.Car.ImportDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarRental.Car.RentPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarRental.Car.RentPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarRental.Car.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarRental.Car.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarRental.Car.CarProducer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarRental.Car.CarProducer.ProducerName)
        </dd>
    </dl>
    <form method="post">
        <td class="form-group">
            <label asp-for="@Model.CarRental.PickupDate"></label>
            <input name="pickUpDate" asp-for="@Model.CarRental.PickupDate" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" value="@Model.CarRental.PickupDate.ToString("yyyy-MM-dd")" type="date" />
        </td>
        <td class="form-group">
            <label asp-for="@Model.CarRental.ReturnDate"></label>
            <input name="returnDate" asp-for="@Model.CarRental.ReturnDate" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-dd")" value="@Model.CarRental.ReturnDate.ToString("yyyy-MM-dd")" type="date" />
        </td>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalDay)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalDay)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CarRental.RentPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CarRental.RentPrice)
            </dd>
        </dl>
        <input type="hidden" name="total" value="@(Model.CarRental.Car.RentPrice) * @Model.TotalDay" />
        <div class="form-group">
            <input type="submit" value="Update" asp-page-handler="update" />
            <input type="submit" value="Rent" asp-page-handler="rent"/>
        </div>
    </form>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>
